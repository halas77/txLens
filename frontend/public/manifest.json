{
  "manifest_version": 3,
  "version": "1.0",
  "name": "TxLens",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "declarativeNetRequest",
    "storage"
  ],

  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
